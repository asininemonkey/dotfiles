alias clean='sudo pacman --remove --cascade --nosave --recursive $(pacman --query --deps --quiet --unrequired)'
alias dig='drill'
alias dsp='docker system prune --all --volumes'
alias grpo='git remote prune origin'
alias htop='btop'
alias installed='pacman --query --explicit'
alias kssh='kitty +kitten ssh'
alias ls='ls --all --color=always -l'
alias ping='prettyping'
alias speedtest='speedtest --secure --share'
alias themes='kitty +kitten themes'
alias top='btop'
alias tree='tree -aghpuCD'

alias tap='AWS_PROFILE=production make terraform-apply-production'
alias tas='AWS_PROFILE=staging make terraform-apply-staging'
alias tau='AWS_PROFILE=uat make terraform-apply-uat'
alias tpp='AWS_PROFILE=production make terraform-plan-production'
alias tps='AWS_PROFILE=staging make terraform-plan-staging'
alias tpu='AWS_PROFILE=uat make terraform-plan-uat'

alias tafp='AWS_PROFILE=friday-production make terraform-apply-friday-production'
alias tafs='AWS_PROFILE=friday-staging make terraform-apply-friday-staging'
alias tafu='AWS_PROFILE=friday-uat make terraform-apply-friday-uat'
alias tpfp='AWS_PROFILE=friday-production make terraform-plan-friday-production'
alias tpfs='AWS_PROFILE=friday-staging make terraform-plan-friday-staging'
alias tpfu='AWS_PROFILE=friday-uat make terraform-plan-friday-uat'

alias wid='waypoint install -accept-tos -context-create local -platform docker'
alias wua='waypoint ui -authenticate'
